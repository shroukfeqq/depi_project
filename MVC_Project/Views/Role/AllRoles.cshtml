
 @model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<div class="container" style="height: 100vh;">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center" style="color: darkblue;">
                    Roles List
                </div>
                <div class="card-body">
                    
                        <table class="table table-dark text-center">
                        <thead>
                            <tr>
                                <th>Role Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="NewRole" asp-controller="Role" class="btn btn-outline-dark">Add New Role</a>
                </div>
            </div>
        </div>
    </div>
</div>
