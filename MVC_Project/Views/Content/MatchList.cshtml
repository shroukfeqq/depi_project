
@model List<Match>

<div class="container mt-4">
   
    <div class="row">
        @foreach (var match in Model)
        {
            <div class="col-md-6 mb-3">
                <!-- Two columns per row -->
                <div class="card text-center bg-light" style="border: 1px solid darkblue;">
                    <!-- Light background with border -->
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Match Id: @match.Match_Id</h6>
                        <h5 class="card-title" style="color:darkred">@match.Name</h5>
                        <a href="/Content/Details/@match.Match_Id" class="btn btn-outline-dark">Match Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
